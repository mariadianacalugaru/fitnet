<!-- <h2>Sign up</h2>-->
<div class="form loginForm" >
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    
    <br>
    <div class="field">
      <% if resource.avatar.attached? %>
        <%= image_tag(resource.avatar) %>
      <% else %>
        <%= image_tag("/images/no_avatar.png") %>
      <% end %>
    </div>

    <div class="field">
      <%= f.text_field :firstname,  autofocus: true, class:"formElement", placeholder:"Firstname", style:"width: 45%" %>
    </div>

    <div class="field">
      <%= f.text_field :lastname, class:"formElement", placeholder:"Lastname",  style:"width: 45%" %>
    </div>

    <div class="field">
      <%= f.email_field :email, autocomplete: "email", class:"formElement", placeholder:"Email", style:"width: 45%" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password",  class:"formElement", placeholder:"Password ( 6 characters minimum)", style:"width: 45%"  %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"formElement", placeholder:"Password Confirmation", style:"width: 45%" %>
    </div>

    <div class="field">
      <%= f.text_area :description, class:"formElement", placeholder:"Say something about you...", style:"width: 45%" %>
    </div>

    <div class="field">
      <%= f.label :gender %>
      <%= f.select :gender, ['M', 'F'] %> 
    </div>

    <div class="field">
      <%= f.label :pt, "Are you a Personal Trainer?" %>
      <%= f.check_box :pt %>
    </div>

    <div class="actions">
      <button class="button formButton"<%= f.submit "Sign up" %>Sign up</button>
    </div>

  <% end %>
  <%= render "users/shared/links" %>
</div>
