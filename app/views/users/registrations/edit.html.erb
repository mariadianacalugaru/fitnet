<h2>Edit <%= resource_name.to_s.humanize %></h2>
<div class="accountsettings" >
  <h3 style="font-family:'Trebuchet MS', Helvetica, sans-serif;">Your Profile</h3>
  <br>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    
    <div class="field">
      <% if current_user.provider == 'google_oauth2' && current_user.avatar_url %>
        <%= image_tag(current_user.avatar_url) %><br />
      <% else %>
        <% if current_user.avatar.attached? %>
          <%= image_tag(current_user.avatar_thumbnail) %>
        <% else %>
          <%= image_tag("/images/no_avatar.png") %>
        <% end %>
        <div class="field">
          <%= f.file_field :avatar %>
        </div>
      <% end %>
    </div>


    <div class="field">
      <%= f.label :firstname %><br />
      <input style="width: 45%" type="text" class="formElement"<%= f.text_field :firstname, readonly: true %>
    </div>

    <div class="field">
      <%= f.label :lastname %><br />
      <input style="width: 45%" type="text" class="formElement"<%= f.text_field :lastname, readonly: true %>
    </div>
    
    <div class="field">
      <%= f.label :email %><br />
      <input style="width: 45%" type="email" class="formElement"<%= f.email_field :email, readonly: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <% if resource.provider != 'google_oauth2' %>
      <div class="field">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
        <input style="width: 45%" type="password" class="formElement"<%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <input style="width: 45%" type="password" class="formElement" <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
        <input style="width: 45%" type="password" class="formElement" <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

    <% end %>

    <div class="field">
        <%= f.label :pt, "Are you a Personal Trainer?" %>
        <%= f.check_box :pt %>
    </div>

    <div class="actions">
      <button class="button formButton"<%= f.submit "Update" %>Update</button>
    </div>

    <% end %>

    <h3>Cancel my account</h3>
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>

    <br>
    <%= link_to "Back", :back %>
</div>