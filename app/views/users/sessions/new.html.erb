<!-- <h2>Log in</h2> -->
<div class="form loginForm" >
  <h3>WELCOME</h3>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"formElement", placeholder:"Email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password",  class:"formElement", placeholder:"Password" %>
    </div>

    <div id="divRemember" class="checkbox mb-3">
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    </div>

    <div class="actions">
    <button class="button formButton"<%= f.submit "Login"%>Login</button>
    </div>
  <% end %>
  <br>

  <%= render "users/shared/links" %>
</div>